import os
def read_bashhistory():
    historyFile = os.path.join(os.environ['HOME'], '.bash_history')
    if os.path.exists(historyFile):
        with open(historyFile, 'r') as file:
            history = file.readlines()
            print(f"Command history for user {os.environ['USER']}:")
            for command in history:
                print (command.strip())
    else:
        print("Bash history file does not exists.")
read_bashHistory()
